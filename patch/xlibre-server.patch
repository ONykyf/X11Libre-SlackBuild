cat $CWD/patch/xlibre-server/xserver-libre-xserver-use-regex-for-InputClass.patch | patch -p1 --verbose || { touch ${SLACK_X_BUILD_DIR}/${PKGNAME}.patch_failed ; continue ; }

# Make glamor work on nvidia.
