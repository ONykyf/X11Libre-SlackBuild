# More checks for PCI multi-CRT cards.
cat $CWD/patch/xlibre-server/xlibre-xserver-pci-multi-crt.patch | patch -p1 --verbose || { touch ${SLACK_X_BUILD_DIR}/${PKGNAME}.patch_failed ; continue ; }

# More checks for udev multi-CRT cards.
cat $CWD/patch/xlibre-server/xlibre-xserver-platform-multi-crt.patch | patch -p1 --verbose || { touch ${SLACK_X_BUILD_DIR}/${PKGNAME}.patch_failed ; continue ; }

